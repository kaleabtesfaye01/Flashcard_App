<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/flashcard_question"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/question_card_background"
        android:elevation="5dp"
        android:gravity="center"
        android:text="Who is the 44th President of the United States?"
        android:textSize="40sp"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/flashcard_answer"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/answer_card_background"
        android:gravity="center"
        android:text="Barack Obama"
        android:textColor="#000000"
        android:textSize="40sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/choice1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/flashcard_answer"
        android:layout_margin="15dp"
        android:background="#efbdaf"
        android:gravity="center"
        android:text="Bill Clinton"
        android:textColor="#013070"
        android:textSize="35sp" />

    <TextView
        android:id="@+id/choice2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/choice1"
        android:layout_margin="15dp"
        android:background="#efbdaf"
        android:gravity="center"
        android:text="George H.W. Bush"
        android:textColor="#013070"
        android:textSize="35sp" />

    <TextView
        android:id="@+id/choice3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/choice2"
        android:layout_margin="15dp"
        android:background="#efbdaf"
        android:gravity="center"
        android:text="Barack Obama"
        android:textColor="#013070"
        android:textSize="35sp" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/toggle_choices_visibility"
        android:src="@drawable/eye2"/>

</RelativeLayout>